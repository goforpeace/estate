rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow read and write access to the entire database for any authenticated user.
    // This is a simple rule for quick setup. For production, you'd want more granular control.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
