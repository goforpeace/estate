rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the signed-in user is an admin.
    // The admin's email is hardcoded for this example.
    function isAdmin() {
      return isSignedIn() && request.auth.email == 'admin@estateflow.com';
    }

    // Helper function to check if the user belongs to the tenant.
    function isTenantMember(tenantId) {
      // Allow if the user is signed in and their user profile's tenantId
      // matches the tenantId in the document path.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    // Admins can read and write to all collections.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Tenant members can read/write everything under their tenant's path.
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if isTenantMember(tenantId);
    }
    
    // Allow tenant members to read their own tenant's document
     match /tenants/{tenantId} {
      allow read: if isTenantMember(tenantId);
    }

    // Allow users to read their own profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
    }
  }
}
