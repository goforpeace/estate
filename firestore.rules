rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow any signed-in user to read/write any document.
    // This is for development purposes and should be secured before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
    
    // This index is required for the collectionGroup query on 'payments'
    // to filter by tenantId.
    match /tenants/{tenantId}/flatSales/{flatSaleId}/payments/{paymentId} {
      // Indexes are not security rules, they just enable queries.
      // The actual security is handled by the rule above.
    }
  }
}
