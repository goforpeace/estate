rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow any signed-in user to read/write any document.
    // This is for development purposes and should be secured before production.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
