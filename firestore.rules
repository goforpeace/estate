rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the signed-in user is an admin.
    // In this simplified example, any authenticated user is considered an admin.
    function isAdmin() {
      return isSignedIn();
    }

    // Rules for the 'tenants' collection
    match /tenants/{tenantId} {
      // Admins can manage all tenant documents.
      allow read, write: if isAdmin();
    }

    // Rules for all sub-collections under a tenant
    match /tenants/{tenantId}/{document=**} {
      // Admins can manage all documents within any tenant's data.
      allow read, write: if isAdmin();
    }

    // Rules for the top-level 'users' collection
    match /users/{userId} {
      // Admins can create user profiles.
      // Tenant users will need rules to read/update their own profile.
      allow create: if isAdmin();
      // Allow a user to read their own profile, or an admin to read any profile.
      allow read, update: if request.auth.uid == userId || isAdmin();
    }
  }
}
