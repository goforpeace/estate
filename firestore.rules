rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is an admin via custom claims.
    // To make a user an admin, you would need to set this claim using the Firebase Admin SDK.
    function isAdmin() {
      return isSignedIn() && request.auth.token.isAdmin == true;
    }

    // Helper function to check if the user belongs to the tenant.
    // This requires that a user's profile document exists and has a tenantId field.
    function isTenantMember(tenantId) {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    // Admins can read and write all tenant documents.
    match /tenants/{tenantId} {
      allow read, write: if isAdmin();
    }

    // Rule for the entire users collection
    match /users/{userId} {
      // Admins can perform any action on any user document. This also covers listing users.
      allow read, write: if isAdmin();
      
      // A signed-in user can read their own profile.
      allow read: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Tenant members can read and write all documents within their own tenant's data space.
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if isTenantMember(tenantId);
    }
  }
}
